<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tonykazanjian.codenamescompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".CodeNamesCompanionApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity"
                  android:windowSoftInputMode="adjustPan">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"/>-->
                <!--<category android:name="android.intent.category.LAUNCHER"/>-->
            <!--</intent-filter>-->

        </activity>

        <activity
            android:name=".timer.TimerActivity"
            android:theme="@style/TimerTheme"
            android:label="Timer"
            android:launchMode="singleTask"
            android:parentActivityName=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <service android:name=".timer.TimerService"
                android:enabled="true">
            <intent-filter>
                <action android:name="com.tonykazanjian.codenamescompanion.action.ACTION_START"/>
                <action android:name="com.tonykazanjian.codenamescompanion.action.ACTION_PAUSE"/>
                <action android:name="com.tonykazanjian.codenamescompanion.action.ACTION_RESUME"/>
                <action android:name="com.tonykazanjian.codenamescompanion.action.ACTION_RESET"/>
            </intent-filter>
        </service>

    </application>

</manifest>