<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.percent.PercentFrameLayout
        android:id="@+id/timer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/timer_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:matProg_barColor="@color/colorPrimary"
            app:matProg_barWidth="6dp"
            app:matProg_circleRadius="220dp"
            app:matProg_fillRadius="true"
            app:matProg_progressIndeterminate="false"
            app:matProg_rimColor="#EEEEEE"
            app:matProg_rimWidth="4dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"/>

        <TextView
            android:id="@+id/timer_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="65sp"
            tools:text="00:00"/>

    </android.support.percent.PercentFrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="204dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/start_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="36dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_start_timer"/>

        <ImageButton
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="36dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_refresh_blue"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>