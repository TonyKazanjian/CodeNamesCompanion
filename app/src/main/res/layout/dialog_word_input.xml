<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_1"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_1"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 1"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_2"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_2"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 2"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_3"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_3"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 3"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_4"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_4"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 4"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_5"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_5"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 5"/>

    </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/word_input_layout_6"
        style="@style/WordInputStyle"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/word_input_6"
            style="@style/WordInputEditTextStyle"
            android:hint="Word 6"/>

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/word_input_layout_7"
            style="@style/WordInputStyle"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/word_input_7"
                style="@style/WordInputEditTextStyle"
                android:hint="Word 7"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/word_input_layout_8"
            style="@style/WordInputStyle"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/word_input_8"
                style="@style/WordInputEditTextStyle"
                android:hint="Word 8"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/word_input_layout_9"
            style="@style/WordInputStyle"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/word_input_9"
                style="@style/WordInputEditTextStyle"
                android:hint="Word 9"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</LinearLayout>